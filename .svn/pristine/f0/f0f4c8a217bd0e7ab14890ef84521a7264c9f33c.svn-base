/*!
 * Bootstrap and CSS Overrides for NAMI
 */
 
body {
	background-image: url(../images/pattern.png);
 }
 
body,
h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
    font-family: 'Lato', sans-serif!important;
} 

h2, h3, h4 	{
	color: #498E57;	
	font-weight: bold;
}

h1 {
	text-transform: uppercase;
	text-align: center;	
}

h2 {
	font-size: 32px;	
}

h3 {
	font-size: 24px;	
}

.panel-success > .panel-heading {
	background-color: #dff0d8;
	border-color: #57ad68;
	color: 	#498e57;
	padding: 3px;
}

#stripe {
	background-image: url(../images/honeycomb-blue.png);
	background-repeat: repeat;
	height: 10px;
}
 
.header {
	background-image: none;
}
 
header .secondary-container {
    color: #0c499c;
    float: right;
    font-size: 18px;
    font-weight: bold;
    padding: 5px 35px 0 0;
}


header .secondary {
    margin: 0 0 0.5em;
    text-align: right;
}

header .secondary li {
    display: inline-block;
}

#phone {
    color: #5a5a5a;
    font-size: 16px;
	float: right;
	padding: 10px 10px 0px 0px;
}

.donate {
    background-image: url("../Images/donate-normal.jpg");
    display: block;
    height: 37px;
    margin: 5px 5px 0 0;
    width: 200px;
}

.donate:hover {
    background-image: url("../Images/donate-hover.jpg");
}

/*!
 * NAVIGATION
 */

nav {
	margin-top: 30px;
}

nav li a {
	font-size: 16px;
	text-transform:uppercase;
}

.navbar-default {
    border-color: #080808;
	border-top: 1px solid #0055a5;
	border-bottom: 5px solid #0055a5;	
}

.navbar-default .navbar-nav > li > a {
    color: #2483cb;
}

.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
	background-color: #0055a5;
    color: #FFFFFF;
}

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus {
    background-color: #0055a5;
    color: #FFFFFF;
}

.dropdown-menu {
	border-top: 5px solid #0055a5;
	background-color: #0055a5;
    color: #FFFFFF;
	font-weight: bold;
}

.dropdown-menu > li > a {
    color: #FFFFFF;
}

.dropdown-menu > li > a:hover {
    background-color: #f8f8f8;
	color: #2483cb;
}

/*!
 * BODY
 */
.featured {
    background: none repeat scroll 0 0 #f0f5f5;
    padding: 40px 0 60px;
}

.iconLeft {
    float: left;
    font-size: 60px;
    padding: 20px 0 0;
    width: 100px;
}

.iconLeft i {
    background: none repeat scroll 0 0 #57ad68;
    border-radius: 90px;
    color: #fff;
    display: block;
    font-size: 36px;
    font-weight: normal;
    height: 75px;
    line-height: 75px;
    text-align: center;
    width: 75px;
}
.contWrapper {
    overflow: hidden;
}

.lead {
    font-size: 20px;
    font-weight: 200;
    line-height: 1.4;
    margin-bottom: 20px;
}

.RSSFeed {
    background: none repeat scroll 0 0 #FFFFFF;
    padding: 40px 0 60px;
}

#namiRSS {
	font-family: 'Lato', sans-serif!important;
	border: none;
}

/*!
 * FOOTER
 */

#footer {
    border-top: 20px solid #a9a9ab;
	background-color: #c0cbd8;
    padding-bottom: 50px;
    padding-top: 10px;
	text-align: center;
	font-size: 16px;
	background-image:url(../images/bg-pattern.png);
	background-repeat: repeat;
}

.footer-headers {
    color: #5a5a5a;
    font-size: 18px;
	font-weight: bold;
    padding: 20px 0px 8px 0px;
    text-align: center;
	text-transform:uppercase;
}

#credit {
	text-align: center;
	font-size: 11px;
	color: #656a71;
	padding-top: 100px;
}

/* Custom, iPhone Portrait 320px */ 
@media only screen and (max-width : 320px) {
.logo img {
	max-width: 270px;
	padding: 0px;
	margin-left: -7px;
}
#phone {
	font-size: 16px;
	padding: 20px 0px 7px 10px;	
	float: none;
	text-align: center;
}
.donate {
	float: none;
	text-align: center;	
	padding: 10px 0px 0px 0px;
	margin-left: -10px;
}
nav {
	margin-top: 0px;
}
#footer {
	margin-top: 0px;	
}

}
 